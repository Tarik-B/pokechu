<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".PokechuApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_pokeball"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pokeball"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokechu"
        tools:targetApi="31">
        <activity
            android:name="fr.amazer.pokechu.ui.compose.ActivityAboutCompose"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.Pokechu">
        </activity>
        <activity
            android:name="fr.amazer.pokechu.ui.about.ActivityAbout"
            android:exported="false"
            android:label="@string/title_activity_about">
        </activity>
        <activity
            android:name="fr.amazer.pokechu.ui.settings.ActivitySettings"
            android:configChanges="locale"
            android:exported="false"
            android:label="@string/title_activity_settings">
<!--            android:configChanges="uiMode"-->
        </activity>
        <activity
            android:name="fr.amazer.pokechu.ui.details.ActivityDetails"
            android:exported="false"
            android:label="@string/placeholder_string"
            android:theme="@style/Theme.Pokechu.NoActionBar">
        </activity>
        <activity
            android:name="fr.amazer.pokechu.ui.main.ActivityMain"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Pokechu">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>